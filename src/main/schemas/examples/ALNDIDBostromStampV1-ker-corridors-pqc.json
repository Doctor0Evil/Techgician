{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aln.tech/schema/ALNDIDBostromStampV1-ker-corridors-pqc.json",
  "title": "ALNDIDBostromStampV1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "authorsystem": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "primarybostromaddr": {
      "type": "string",
      "pattern": "^bostrom[0-9a-z]{30,64}$"
    },
    "altbostromaddr": {
      "type": "string",
      "pattern": "^bostrom[0-9a-z]{30,64}$"
    },
    "safeaddrs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 128
      }
    },
    "responsehashhex": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$",
      "description": "SHA-256 over canonicalized artifact text"
    },
    "Tscore0to1": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "Pscore0to1": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "Rscore0to1": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "Cscore0to1": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "timestamputciso8601": {
      "type": "string",
      "format": "date-time"
    },

    "ker_at_signing": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "K": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "E": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "R": { "type": "number", "minimum": 0.0, "maximum": 1.0 }
      },
      "required": ["K", "E", "R"],
      "description": "Knowledge, Eco-impact, and Risk scores for the referenced ecobranch or InfraNodeShard at signing time"
    },

    "corridor_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 128
      },
      "description": "Stable identifiers of corridor tables in force when the artifact was created (WBGT, exergy, structural, jurisdictional, etc.)"
    },

    "pqc_multisig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "scheme": {
          "type": "string",
          "enum": [
            "dilithium2",
            "dilithium3",
            "dilithium5",
            "sphincs+-sha256-128s",
            "sphincs+-sha256-192s",
            "sphincs+-sha256-256s"
          ]
        },
        "threshold_m": {
          "type": "integer",
          "minimum": 1
        },
        "threshold_n": {
          "type": "integer",
          "minimum": 1
        },
        "signers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "role": {
                "type": "string",
                "enum": ["author", "infra", "auditor"]
              },
              "did": {
                "type": "string",
                "minLength": 3,
                "maxLength": 128
              },
              "pubkey": {
                "type": "string",
                "minLength": 32,
                "maxLength": 4096
              },
              "signature": {
                "type": "string",
                "minLength": 32,
                "maxLength": 8192
              }
            },
            "required": ["role", "did", "pubkey", "signature"]
          }
        }
      },
      "required": ["scheme", "threshold_m", "threshold_n", "signers"],
      "description": "Post-quantum multi-signature attestation over responsehashhex and all stamp fields"
    }
  },
  "required": [
    "authorsystem",
    "primarybostromaddr",
    "safeaddrs",
    "responsehashhex",
    "Tscore0to1",
    "Pscore0to1",
    "Rscore0to1",
    "Cscore0to1",
    "timestamputciso8601",
    "ker_at_signing",
    "corridor_ids",
    "pqc_multisig"
  ]
}
